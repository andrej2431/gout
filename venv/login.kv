
<MainWindow>:
    app: app
    login: login
    password: passw
    float_layout: float_layout
    canvas.before:
        Color:
            rgba: .9, 0.85, .5, 1
        Rectangle:
            pos: self.pos
            size: self.size

    FloatLayout:
        id: float_layout
        Label:
            size_hint: (.7,.2)
            pos_hint: {'x':.15,'top':.93}

            color: 0,0.5,0,0.8
            font_size: '50sp'
            markup:True
            text: "[b][i]Goout"


        TextInput:
            id: login
            size_hint: .5,.06
            pos_hint: {'x':.25,'top':.6}

            color: 0,0,0,1
            font_size: '15sp'
            multiline: False
            hint_text: 'login'
            text: ''

        TextInput :
            password: True
            id: passw
            size_hint: .5,.06
            pos_hint: {'x':.25,'top':.5}
            text: ''
            multiline: False
            font_size: '15sp'
            hint_text: 'password'


        Button:
            size_hint: .4,.09
            pos_hint: {'x':.3,'top':.4}

            markup: True
            text: '[b][i]Log In'

            on_release: root.press_log_in()

        Button:
            size_hint: .4,.05
            pos_hint: {'x':.3,'top':.25}

            markup: True
            text: '[b][i]Continue as Guest'

            on_release: root.nickname_screen()

<NicknameWindow>:
    app:app
    canvas.before:
        Color:
            rgba: .9, 0.85, .5, 1
        Rectangle:
            pos: self.pos
            size: self.size
    float_layout_nickname:float_layout_nickname
    nickname: nickname

    FloatLayout:
        id: float_layout_nickname
        Button:
            size_hint: .4,.07
            pos_hint: {'x':.3,'top':.52}

            markup: True
            text: '[b][i]Continue'

            on_release: root.press_continue()

        TextInput:
            id: nickname
            size_hint: .5,.06
            pos_hint: {'x':.25,'top':.6}
            color: 0,0,0,1
            font_size: '15sp'
            multiline: False
            hint_text: 'Nickname'
            text: ''

        Button:
            size_hint: .3,.05
            pos_hint: {'x':.1,'top':.2}

            markup: True
            text: '[b][i]<= Return'

            on_release: root.return_to_homescreen()

<SecondWindow>:
    canvas.before:
        Color:
            rgba: .9, 0.85, .5, 1
        Rectangle:
            pos: self.pos
            size: self.size
    nickname_label:nickname_label
    FloatLayout:

        Label:
            color: 0,0,0,1
            text: 'To be continued...'
        Label:
            id: nickname_label
            size_hint: .25,.05
            pos_hint: {'right':0.6,'top':.85}
            text_size: nickname_label.size
            color: 0,0,0,1
            text: app.user.nickname

        Button:
            size_hint: .3,.05
            pos_hint: {'x':.1,'top':.2}

            markup: True
            text: '[b][i]<= Return'

            on_release: root.return_to_homescreen()

        Image_Button:
            source: app.user.user_photo
            size_hint: .2,.2
            pos_hint: {'right':.6,'top':1}

<MyManager>:
    id: screen_manager

    login_screen: login_screen
    next_screen: next_screen

    MainWindow:
        id: login_screen
        name: "login_screen"
        manager: screen_manager

    SecondWindow:
        id: next_screen
        name: "next_screen"

    NicknameWindow:
        id: nickname_window
        name: 'nickname_screen'
